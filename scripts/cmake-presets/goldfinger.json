{
  "version": 3,
  "cmakeMinimumRequired": {"major": 3, "minor": 21, "patch": 0},
  "configurePresets": [
    {
      "name": ".base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS":     {"type": "BOOL",   "value": "ON"},
        "BUILD_TESTING":         {"type": "BOOL",   "value": "ON"},
        "G4VG_BUILD_TESTS":      {"type": "BOOL",   "value": "ON"},
        "GTest_DIR": {"type": "PATH", "value": "/opt/spack/opt/spack/tahoe/googletest/1.17.0/c332ssk/lib/cmake/GTest"},
        "Geant4_DIR": {"type": "PATH", "value": "/opt/spack/opt/spack/tahoe/geant4/11.3.2/7oydgus/lib/cmake/Geant4"},
        "VecGeom_DIR": {"type": "PATH", "value": "/opt/spack/opt/spack/tahoe/vecgeom/1.2.11/ucdmumh/lib/cmake/VecGeom"},
        "CMAKE_EXPORT_COMPILE_COMMANDS": {"type": "BOOL",   "value": "ON"},
        "CMAKE_OSX_DEPLOYMENT_TARGET": {"type": "STRING", "value": "26"},
        "CMAKE_CXX_STANDARD":   {"type": "STRING",   "value": "20"},
        "CMAKE_CXX_EXTENSIONS": {"type": "BOOL",   "value": "OFF"},
        "CMAKE_FIND_FRAMEWORK": {"type": "STRING", "value": "LAST"},
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-${presetName}",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG -fno-inline -fno-omit-frame-pointer",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wno-error=deprecated -pedantic -fdiagnostics-color=always"
      }
    },
    {
      "name": "base",
      "displayName": "Goldfinger default options",
      "inherits": [".base", ".debug", "default"],
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "jobs": 8,
      "nativeToolOptions": ["-k0"]
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": false, "jobs": 8}
    }
  ]
}
