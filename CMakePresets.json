{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Automatic options",
            "description": "Dependencies are enabled based on environment probing",
            "binaryDir": "${sourceDir}/build-${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-${presetName}"
            }
        },
        {
            "name": ".cuda-volta",
            "hidden": true,
            "description": "Options to enable CUDA 11 on Volta architecture",
            "cacheVariables": {
                "CMAKE_CUDA_ARCHITECTURES": {
                    "type": "STRING",
                    "value": "70"
                }
            }
        },
        {
            "name": ".ndebug",
            "hidden": true,
            "description": "Build with optimizations and without debug assertions",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Release"
                },
                "G4VG_DEBUG": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_CUDA_FLAGS_RELEASE": "-O3 -DNDEBUG"
            }
        },
        {
            "name": ".reldeb",
            "hidden": true,
            "description": "Enable debug with basic optimizations",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "RelWithDebInfo"
                }
            }
        },
        {
            "name": ".debug",
            "hidden": true,
            "description": "Enable debug mode",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "G4VG_DEBUG": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                }
            }
        },
        {
            "name": "mikpres",
            "description": "",
            "displayName": "",
            "inherits": [
                ".debug"
            ],
            "cacheVariables":
            {
              "BUILD_SHARED_LIBS":     {"type": "BOOL", "value": "ON"},
              "G4VG_BUILD_TESTS":     {"type": "BOOL", "value": "ON"},
              "CMAKE_CXX_STANDARD": "17",
              "CMAKE_CXX_EXTENSIONS": {"type": "BOOL", "value": "OFF"},
              "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror -Wno-error=deprecated-declarations",
              "CMAKE_CUDA_FLAGS": "-Werror all-warnings",
              "CMAKE_CUDA_ARCHITECTURES": {
                    "type": "STRING",
                    "value": "7%"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "jobs": 0,
            "configurePreset": "default"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false,
                "jobs": 8
            }
        }
    ]
}
